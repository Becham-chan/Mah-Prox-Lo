% Presume wa = Western Australia, na = Northern Territory,
% sa = South Australia, q = Queensland, nws = New South Wales,
% v = Victoria, t = Tasmania

adjacent(wa,nt). adjacent(nt, wa).

adjacent(wa,sa). adjacent(sa,wa).

adjacent(nt,sa). adjacent(sa,nt).

adjacent(nt,q).  adjacent(q,nt).

adjacent(sa,q).  adjacent(q,sa).

adjacent(sa,nsw). adjacent(nsw,sa).

adjacent(sa,v). adjacent(v,sa).

adjacent(q,nsw). adjacent(nsw,q).

adjacent(nsw,v). adjacent(v,nsw).

adjacent(v, t). adjacent(t, v).

color(red).
color(green).
color(blue).

colorify(WA, NT, SA, Q, NSW, V, T):-
    color(WA), color(NT), color(SA), color(Q), color(NSW), color(V), color(T),
    \+ WA=NT, \+ WA=SA, \+NT=SA, \+NT=Q, \+SA=Q, \+SA=NSW, \+Q=NSW, \+SA=V, \+NSW=V, \+V=T.
